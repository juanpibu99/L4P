{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
        <div class="col-lg-6 col-12 text-center mt-5 order-lg-2">

                <div class="example-wrapper mt-5">
                    <form action="{{path('login')}}" method="POST">
                        <h1 class="pb-5"> Inicia sesión en L4P </h1>
                        <p><label for="username">Usuario</label></p>
                        <p><input type="text" id="username" name="_username" value="{{last_username}}"></p>

                        <p><label for="password">Contraseña</label></p>
                        <p><input type="password" id="password" name="_password"></p>


                        <input type="hidden" name="redirect" value="/">

                        
                        <p><button id="register_save" type="submit">Entrar</button></p>
                        <p>{{error}}</p>
                        <p>¿No tienes cuenta?<a href="http://127.0.0.1:8000/register">Registrate</a></p>
                        
                    
                    </form>

                </div>
            </div>
            <div class="col-lg-6 col-12 text-center order-lg-1 d-none d-lg-block">
                <h1 class="neon">Tu red social de</h1>
                <h1 class="neon">videojuegos</h1>
            </div>
            
        </div>
    </div>
{% endblock %}
